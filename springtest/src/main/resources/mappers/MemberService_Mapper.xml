<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ezen.myapp.persistence.MemberService_Mapper">

<!-- MyBatis에선 변수를 #{} 안에 담아 표현 -->
<!-- MyBatis에서 resultType 이나 parameterType은 클래스타입 or  변수 타입을 지정해주는 것이 좋다. -->
<select id="memberLogin" parameterType="String" resultType="mv">
select * from bclass_member2 where memberid = #{0} and memberpwd=#{1} and delYn='N'
</select>

<!-- mv: com.ezen.myapp.domain.MemberVo의 약어(따로 지정) -->
<!-- MyBatis_config.xml 파일에서 약어(별칭)를 설정해줘야함. -->

</mapper>